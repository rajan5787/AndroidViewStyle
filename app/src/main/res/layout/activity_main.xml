<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="28dp"
    android:paddingBottom="28dp"
    tools:context="rajan5787.tikuraja.androidstyle.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button One"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_one" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Two"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_two" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Three"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_three" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Four"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_four" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Four"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_five" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Six"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_six" />

            <Button
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_tringle" />


            <Button
                android:layout_width="126dp"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_shadow" />


            <Button
                android:layout_width="126dp"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_state" />

            <Button
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:textColor="@color/white"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="22dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_heart" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
